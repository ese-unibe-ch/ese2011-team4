# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Import Secure routes
*       /                                       		module:secure

# Home page
GET     /                                       		Application.index
GET		/calendar/{id}									Calendars.showCurrentMonth
GET     /calendar/{id}/{year}-{month}-{day}     		Calendars.show
GET		/register										Users.register
GET		/users/favorite/add/{userId}					Users.addContact
GET		/users/favorite/delete/{userId}					Users.deleteContact
GET     /captcha                              			Application.captcha
GET		/calendar/{calendarId}/add/{year}-{month}-{day}	Events.add
GET     /event/{id}/comments                   			Events.showComments
GET     /event/{id}/comment	                   			Events.addComment
POST	/comment/{id}/update							Events.updateComment
GET		/calendar/{calendarId}/event/{eventId}/edit		Events.edit
GET		/user/{userId}									Calendars.display
GET		/location/{id}									Locations.show
GET		/location/{locationId}/edit                     Locations.edit

# Ignore favicon requests
GET     /favicon.ico                            		404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                		staticDir:public

# Catch all
*       /{controller}/{action}                  		{controller}.{action}
